<div class="container">
  <div class="row" ng-controller="ClassListController">
    <div class="col-xs-12">
      <ul class="list-group">
        <div class="row">
          <input class="form-control col-xs-12" ng-model="searchBox" type="text" placeholder="filter list">
          <div style="margin-top: 30px;">
            <div class="col-xs-12 col-md-3 hvr-shrink class-item" ng-repeat="class in classList | filter: searchBox">
              <a href="/note/all/{{ class.class_name }}">
                <li class="list-group-item" id="{{ class._id }}">
                  <div class="row">
                    <div class="col-xs-10">
                      <div class="limited-text"> {{ class.class_name }}</div>
                    </div>
                    <div class="col-xs-2">
                      <span class="badge pull-right">{{ class.total_notes }}</span>
                    </div>
                  </div>
                </li>
              </a>
            </div>
          </div>
          <div class="col-xs-12 text-center fixed-bottom-button">
              <a href="/class/create/"
                 class="btn btn-primary">
                 <i class="fa fa-plus-square fa-2x" aria-hidden="true"></i>
                <span style="font-size: 2em;">
                   New Class
                </span>
               </a>
          </div>
        </div>
      </ul>
    </div>
  </div>
</div>
